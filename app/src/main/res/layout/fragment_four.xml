<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            card_view:cardUseCompatPadding="true"
            android:layout_margin="10dp"
            >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#e0ebeb"
                    >



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Contact us"
                        android:textStyle="bold"
                        android:id="@+id/hotlinetext"
                        android:layout_marginLeft="7dp"
                        android:textColor="#000003"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorViewLine"
                        android:layout_margin="1dp"
                        android:id="@+id/hotlineview"
                        android:layout_below="@+id/hotlinetext"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactline1"
                        android:orientation="horizontal"
                        android:layout_below="@+id/hotlineview"
                        android:padding="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Care 1"
                            android:textStyle="bold"
                            android:textSize="17sp" />
                        <ImageView
                            android:layout_height="37dp"
                            android:layout_width="37dp"
                            android:src="@drawable/phoneicon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contactline2"
                        android:orientation="horizontal"
                        android:layout_below="@+id/contactline1"
                        android:layout_marginTop="6dp"
                        android:padding="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Care 2"
                            android:textStyle="bold"
                            android:textSize="17sp" />
                        <ImageView
                            android:layout_height="37dp"
                            android:layout_width="37dp"
                            android:src="@drawable/phoneicon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/facebookarea"
                        android:orientation="horizontal"
                        android:layout_below="@+id/contactline2"
                        android:layout_marginTop="8dp"
                        android:padding="6dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Facebook"
                            android:textStyle="bold"
                            android:textSize="19sp" />
                        <ImageView
                            android:layout_height="37dp"
                            android:layout_width="37dp"
                            android:src="@drawable/facebook"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp" />

                    </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>